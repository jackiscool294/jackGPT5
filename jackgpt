  <title>JackGPT - AI Chat</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      background: #000000;
      margin: 0;
      padding: 0;
      display: flex;
      flex-direction: column;
      height: 100vh;
      color: white;
    }

    header {
      background: #29294d;
      padding: 15px;
      text-align: center;
      font-size: 22px;
      font-weight: bold;
    }

    #chat-container {
      flex: 1;
      padding: 15px;
      overflow-y: auto;
      display: flex;
      flex-direction: column;
    }

    .message {
      max-width: 70%;
      padding: 10px 15px;
      border-radius: 8px;
      margin: 5px 0;
      line-height: 1.4em;
      white-space: pre-wrap;
    }

    .user {
      align-self: flex-end;
      background: #4cafef;
      color: white;
    }

    .bot {
      align-self: flex-start;
      background: #444;
    }

    #input-container {
      display: flex;
      padding: 10px;
      background: #29294d;
    }

    #user-input {
      flex: 1;
      padding: 10px;
      border: none;
      border-radius: 5px;
      font-size: 16px;
      outline: none;
    }

    #send-btn {
      background: #4cafef;
      border: none;
      margin-left: 10px;
      padding: 10px 15px;
      border-radius: 5px;
      cursor: pointer;
      color: white;
      font-weight: bold;
      transition: 0.2s;
    }

    #send-btn:hover {
      background: #3498db;
    }
